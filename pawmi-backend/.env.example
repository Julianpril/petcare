# Application
APP_NAME=PawMI API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pawmi
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/pawmi_test

# Redis (cache)
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML Models
ML_MODELS_PATH=../pawmi-ml/models/saved_models
DIAGNOSIS_MODEL=diagnosis_classifier_v1.pkl
BREED_MODEL=breed_classifier.h5

# Ollama (opcional)
OLLAMA_URL=http://localhost:11434

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
CORS_ORIGINS=["http://localhost:19006", "exp://192.168.1.100:8081"]
